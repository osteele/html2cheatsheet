cheatsheet do
  title {{ title }}
  docset_file_name {{ filename }}
  keyword {{ keyword }}

  {%- if resources_dir -%}
  resources '{{ resources_dir }}'
  {% endif -%}

  {%- if introduction -%}
  introduction '{{ introduction }}'
  {% endif -%}

  {% for category in categories %}

  category do
    id {{ category[0] }}

    {%- for entry in category[1] %}
    entry do
      name {{ entry.name }}
      command {{ entry.key }}
      notes {{ entry.notes }}
    end
    {%- endfor %}
  end
  {%- endfor %}
end
